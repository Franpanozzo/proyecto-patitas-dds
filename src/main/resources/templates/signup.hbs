{{#partial "contenido"}}
<div class="container container-upper">
        <form action="/session" method="POST">
          <h6> Datos personales </h6>
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="inputEmail4">Nombre</label>
              <input type="text" class="form-control" id="nombre" placeholder="Ingrese su nombre" name="nombre">
            </div>
            <div class="form-group col-md-4">
              <label for="inputPassword4">Apellido</label>
              <input type="text" class="form-control" id="apellido" placeholder="Ingrese su apellido" name="apellido">
            </div>
          </div>
          <div class="form-row">
              <label for="text">Fecha de nacimiento </label>
              <br>
              <div class="form-group col-md-2">
                <input type="text" class="form-control" id="fechaNacAño" placeholder="Año" name="fechaNacAño">
              </div>
              <div class="form-group col-md-2">
                <input type="text" class="form-control" id="fechaNacMes" placeholder="Mes" name="fechaNacMes">
              </div>
              <div class="form-group col-md-2">
                <input type="text" class="form-control" id="fechaNacDia" placeholder="dia" name="fechaNacDia">
              </div>
          </div>
          <div class="form-row">
              <div class="form-group col-md-2">
                  <select class="custom-select" name="tipoDoc">
                    <option selected>Tipo Documento</option>
                    <option value="DNI">DNI</option>
                    <option value="LIBRETA">LIBRETA</option>
                    <option value="PASAPORTE">PASAPORTE</option>
                    <option value="CUIT">CUIT</option>
                  </select>
              </div>
              <div class="form-group col-md-4">
                  <input type="text" class="form-control" id="fechaNacMes" placeholder="Numero de documento" name="numeroDoc">
              </div>
          </div>
          <h6> Datos de usuario </h6>
          <div class="form-row">
            <div class="form-group col-md-4">
            <input type="text" class="form-control" id="nombreUsuario" placeholder="Nombre de usuario" name="nombreUsuario">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <input type="text" class="form-control" id="telefono" placeholder="Telefono" name="telefono">
            </div>
            <div class="form-group col-md-4">
              <input type="text" class="form-control" id="email" placeholder="Email" name="email">
            </div>
          </div>

          <div class="form-row">
              <div class="form-group col-md-4">
                <input type="password" class="form-control" id="password" placeholder="Contraseña" name="password">
              </div>
              <div class="form-group col-md-4">
                <input type="password" class="form-control" id="email" placeholder="Confirme contraseña" name="passwordConfirm">
              </div>
          </div>

           <div class="form-row">
            <div class="form-group col-md-2">
               <button type="submit" class="btn btn-secondary">Cancelar</button>
            </div>
           <div class="form-group col-md-1">
               <a class="btn btn-primary" href="/login">Registrarse</a>
            </div>
        </form>
</div>

{{/partial}}

{{>layout.hbs}}